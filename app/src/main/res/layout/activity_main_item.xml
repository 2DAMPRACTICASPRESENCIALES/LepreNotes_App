<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/pastelyellow"
    app:cardElevation="10dp"
    app:contentPadding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/reviews_rcview_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBJECT"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="71dp" />

            <TextView
                android:id="@+id/main_rcview_subject"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/main_rcview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_rcview_editbutton"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/white"
                android:text="@string/edit"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_preferences"
                app:iconGravity="textStart"
                app:iconSize="45dp" />

            <Button
                android:id="@+id/main_rcview_seebutton"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/white"
                android:text="@string/see"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"
                app:iconSize="45dp" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>