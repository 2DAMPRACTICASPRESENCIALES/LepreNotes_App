<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="566dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="299dp"
            android:layout_height="216dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/ic_launcher_leprenotes_foreground" />

        <Button
            android:id="@+id/button_notes"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:onClick="butSeeNotes"
            android:text="Notes"
            android:textSize="14dp"
            android:backgroundTint="@color/pastelyellow"
            android:strokeColor="@color/bluelepre"
            app:icon="?attr/actionModePasteDrawable" />

        <Button
            android:id="@+id/button_reviews"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:onClick="buttSeeReviews"
            android:backgroundTint="@color/pastelyellow"
            android:strokeColor="@color/bluelepre"
            android:text="Reviews"
            android:textSize="14dp"
            app:icon="?android:attr/actionModeFindDrawable" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>